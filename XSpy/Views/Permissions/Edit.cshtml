@model Stock.Shared.Models.Views.Roles.EditRankViewModel
@{
    ViewData["Title"] = "Editar cargo";
    ViewData["PageScript"] = "/js/app/permissions/edit.js";

}


@section Styles {
    <link rel="stylesheet" href="~/libs/bootstrap4-duallistbox/bootstrap-duallistbox.min.css"/>
}

@section PreScripts
{
    <script>
        window.rankId = '@Model.RankData.Id';
    </script>
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card ">
                    <div class="card-header">
                        <h3 class="card-title">Editar cargo</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" id="addUserForm" role="form" action="/api/permissions">
                            <div class="form-group">
                                <label>
                                    Nome do cargo <br>
                                </label>
                                <input type="text" name="rankName" class="form-control" value="@Model.RankData.Name" required="">
                            </div>
                            <div class="hr-line-dashed"></div>

                            <div class="form-group" style="text-align: center">
                                <label>
                                    Permissões <br>
                                </label>
                                <select class="form-control dual_select" name="roles[]" multiple>
                                    @foreach (var role in @Model.Roles)
                                    {
                                        if (Model.RankRoles.Any(s => s.Name == role.Name))
                                        {
                                            <option value="@role.Name" selected="selected">@role.Title</option>
                                        }
                                        else
                                        {
                                            <option value="@role.Name">@role.Title</option>
                                        }
                                    }
                                </select>
                            </div>


                            <div class="form-group row">
                                <div class="col-sm-12 text-right">
                                    <button class="btn btn-primary btn-sm" type="submit">Salvar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>