@{
    ViewData["Title"] = "Aparelhos conectados";
    ViewData["PageScript"] = "~/js/app/device/list.js";

}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Filtros de busca</h3>
                    </div>
                    <div class="card-body">
                        <form role="form" id="searchForm" autocomplete="off">
                            <div class="row">
                            <div class="col-sm-4">
                                <!-- text input -->
                                <div class="form-group">
                                    <label>Modelo</label>
                                    <input type="text" name="model" id="model" class="form-control" placeholder="">
                                </div>
                            </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de dispositivos</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-striped table-bordered table-hover table-text-center" id="dataTable">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Modelo</th>
                                <th>Status</th>
                                <th>Última atualização</th>
                                <th>Ação</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>