@using XSpy.Database.Models.Data.Financial
@{
    ViewData["Title"] = "Compras";
    ViewData["PageScript"] = "~/js/financial/list.js";

}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Filtros de busca</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form id="searchForm">
                        <div class="row">
                            <div class="col-lg-4">
                                <label for="username" class="font-normal">Usuário</label>
                                <input type="text" placeholder="Usuário (CPF/CNPJ)" id="username" name="username" class="form-control m-b">
                            </div>

                            <div class="col-lg-4">
                                <label for="fullName" class="font-normal">Nome</label>
                                <input type="text" placeholder="Nome Completo" id="fullName" name="fullName" class="form-control m-b">
                            </div>

                            <div class="col-lg-4">
                                <label for="paymentStatus" class="font-normal">Estado do pagamento</label>
                                <select class="select2 form-control" name="paymentStatus" id="paymentStatus">
                                    <option value="">Qualquer situação</option>
                                    <option value="@PaymentStatus.Success">Aprovado</option>
                                    <option value="@PaymentStatus.Pending">Pendente</option>
                                    <option value="@PaymentStatus.Canceled">Cancelado</option>
                                    <option value="@PaymentStatus.Failed">Falha</option>
                                </select>
                            </div>

                        </div>
                        <div class="text-right">
                            <button class="btn btn-primary" id="sendSearch" type="button" style="margin-left: 10px">Pesquisar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Transações</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover table-text-center" id="dataTable">
                        <thead>
                            <tr>
                                <th>Pedido</th>
                                <th>CPF/CNPJ</th>
                                <th>Nome</th>
                                <th>Meio de pagamento</th>
                                <th>Estado</th>
                                <th>Quantidade</th>
                                <th>Valor</th>
                                <th>Data</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="attachDocumentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Anexar comprovante de pagamento no boleto/depósito</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <div class="custom-file">
                                <input id="file" name="file" type="file" class="custom-file-input">
                                <label for="file" class="custom-file-label">Selecione um arquivo...</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="sendBtnModal">Salvar</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <link rel="stylesheet" href="~/libs/select2/css/select2.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.23/b-1.6.5/b-html5-1.6.5/b-print-1.6.5/r-2.2.7/datatables.min.css" />
}

@section PreScripts
{
    <script>
        window.exportOptions = {
            columns: [0, 1, 2, 3, 4]
        }

        window.canAccept = @(Html.HasPermission("IS_FINANCIAL_ADMIN") ? "true" : "false");
    </script>
}
